<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your camel xp: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/camel_counter" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="200dp"
            app:srcCompat="@drawable/teve"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <Button
            android:text="Click me!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/click_me_button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/camel_counter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Button"
            app:layout_constraintTop_toBottomOf="@id/click_me_button"
            app:layout_constraintLeft_toLeftOf="@id/click_me_button"
            app:layout_constraintRight_toRightOf="@id/click_me_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/go_to_store_button" android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>